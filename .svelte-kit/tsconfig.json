{
	"compilerOptions": {
		"baseUrl": "..",
		"paths": {
			"src/*": [
				"src/*"
			],
			"components/*": [
				"src/components/*"
			],
			"routes/*": [
				"src/routes/*"
			],
			"stores/*": [
				"src/stores/*"
			],
			"const/*": [
				"src/const/*"
			],
			"icon/*": [
				"src/const/Icon/*"
			]
		},
		"rootDirs": [
			"..",
			"./types"
		],
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"preserveValueImports": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte"
	],
	"exclude": [
		"../node_modules/**",
		"./[!ambient.d.ts]**"
	]
}